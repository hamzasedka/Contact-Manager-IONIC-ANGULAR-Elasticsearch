{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dom/services/auth-service": ["libs/services/auth-service/src/index.ts"],
      "@dom/services/common-service": [
        "libs/services/common-service/src/index.ts"
      ],
      "@dom/services/subscriptions-service": [
        "libs/services/subscriptions-service/src/index.ts"
      ],
      "@dom/ui/admin": ["libs/ui/admin/src/index.ts"],
      "@dom/ui/public": ["libs/ui/public/src/index.ts"],
      "@dom/ui/common": ["libs/ui/common/src/index.ts"],
      "@dom/common/helpers": ["libs/common/helpers/src/index.ts"],
      "@dom/common/core": ["libs/common/core/src/index.ts"],
      "@dom/data/ngrx-store": ["libs/data/ngrx-store/src/index.ts"],
      "@dom/data/ngrx-data": ["libs/data/ngrx-data/src/index.ts"],
      "@dom/infra/auth": ["libs/infra/auth/src/index.ts"],
      "@dom/common/dto": ["libs/common/dto/src/index.ts"],
      "@dom/ui/layout": ["libs/ui/layout/src/index.ts"],
      "@dom/ui/manage-users": ["libs/ui/manage-users/src/index.ts"],
      "@dom/ui/manage-products": ["libs/ui/manage-products/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
